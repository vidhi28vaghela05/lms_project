{
    "name": "lms-ecosystem-fullstack",
    "version": "1.0.0",
    "description": "Consolidated MERN LMS",
    "main": "backend/server.js",
    "scripts": {
        "frontend-install": "npm install --prefix frontend",
        "backend-install": "npm install --prefix backend",
        "install-all": "npm run frontend-install && npm run backend-install",
        "build": "npm run build --prefix frontend",
        "start": "node backend/server.js",
        "dev": "concurrently \"node backend/server.js\" \"npm run dev --prefix frontend\"",
        "dev-complete": "node startup.js",
        "heroku-postbuild": "npm run install-all && npm run build"
    },
    "dependencies": {
        "concurrently": "^8.2.0"
    }
}